
<%- include('../partials/header') %>

<main>
    <div class="container mt-4">
        <h2>News List</h2>

        <table class="table table-bordered table-striped table-hover table-sm">
            <thead>
                <tr>
                    <th> <a href="/portfolio/create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus-circle"></i> 
                    </a></th>
                    <th>Title</th>
                    <th>Image</th>

                    <th>Created At</th>
                    <th>Action</th>     
                </tr>
                <tr>

                </tr>
            </thead>
            <tbody>
                <% result.forEach((Portfolio, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= Portfolio.title %></td>
                        <td>
                            <img src="../../storage/images/<%= Portfolio.image %>" alt="<%= Portfolio.title %>" class="img-thumbnail" width="1000">
                        </td>
                     
                        <td><%= Portfolio.created_at %></td>
                        <td>
                        
                            <a href="/product/edit/<%= Portfolio.id %>" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <a href="/product/delete/<%= Portfolio.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">
                                <i class="fas fa-trash-alt"></i> 
                            </a>
                    
                        </td>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</main>

<%- include('../partials/footer') %>