<!-- resources/views/index.ejs -->
<%- include('../partials/header') %>

<main>
    <div class="container mt-4">
        <h2>News List</h2>

        <table class="table table-bordered table-striped table-hover table-sm">
            <thead>
                <tr>
                    <th> <a href="/service/create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus-circle"></i> 
                    </a></th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Short Description</th>
                    <th>Created At</th>
                    <th>Action</th> <!-- Column for action buttons -->
                </tr>

            </thead>
            <tbody>
                <% results.forEach((news, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= news.title %></td>
                        <td>
                            <img src="../../storage/images/<%= news.image %>" alt="<%= news.title %>" class="img-thumbnail" width="1000">
                        </td>
                     
                        <td><%= news.content_desc%></td>
                        <td><%= news.short_desc %></td>
                        <td><%= news.created_at %></td>
                        <td>
                            <!-- Action buttons -->
                            <a href="/service/edit/<%= news.id %>" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <a href="/service/delete/<%= news.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">
                                <i class="fas fa-trash-alt"></i> 
                            </a>
                           <!-- This can link to a create page -->
                        </td>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</main>

<%- include('../partials/footer') %>